# Choose one provider. "gemini" recommended (free tier generous)
PROVIDER=gemini   # or openai

# If PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_here

# If PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here

# Optional tuning
CHUNK_SIZE=1200      # characters
CHUNK_OVERLAP=150    # characters
TOP_K=4              # retrieved chunks
MIN_SCORE=0.78       # semantic similarity gate (0..1; higher = stricter)

# Ingestion performance settings
MAX_PAGES=50                # Maximum pages to crawl (default: 50, increased from 5)
EMBEDDING_BATCH_SIZE=64     # Chunks per embedding batch (default: 64, increased from 32)
CRAWL_DELAY=0.1            # Delay between requests in seconds (default: 0.1, reduced from 0.3)
REQUEST_TIMEOUT=30         # HTTP request timeout in seconds (default: 30, increased from 20)

# API retry settings
MAX_RETRIES=5              # Maximum retry attempts for API calls (default: 5)
RETRY_BASE_DELAY=1.0       # Base delay for exponential backoff in seconds (default: 1.0)
RETRY_MAX_DELAY=60.0       # Maximum delay between retries in seconds (default: 60.0)
API_TIMEOUT=120            # API call timeout in seconds (default: 120)

# Progress persistence
CHECKPOINT_INTERVAL=100    # Save progress every N chunks (default: 100)
RESUME_FROM_CHECKPOINT=true # Resume from checkpoint if available (default: true)
